{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "schema:dump": "with-env -- php artisan schema:dump --env=local --path=./database/atlas/schemas/schema.sql",
        "migrate:install": "with-env -- php artisan migrate:install --env=local",
        "migrate:refresh": "with-env -- php artisan migrate:refresh --env=local",
        "migrate:fresh": "with-env -- php artisan migrate:fresh --env=local",
        "migrate": "with-env -- php artisan migrate --env=local",
        "codegen:ide-helper-models": "with-env -- php artisan ide-helper:model --env=local -n -M -R",
        "codegen:ide-helper-facades": "with-env -- php artisan ide-helper:generate --env=local -n",
        "codegen:ide-helper-meta": "with-env -- php artisan ide-helper:meta --env=local",
        "codegen:ide-helper": "bun run codegen:ide-helper-models && bun run codegen:ide-helper-facades && bun run codegen:ide-helper-meta"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@rencedm112/biome-config": "^1.0.0",
        "@rencedm112/tsconfig": "^3.0.6",
        "@rencedm112/with-env": "^0.0.39",
        "@tailwindcss/forms": "^0.5.9",
        "@types/alpinejs": "^3.13.10",
        "autoprefixer": "^10.4.20",
        "axios": "^1.7.7",
        "laravel-vite-plugin": "^1.0.6",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.6.3",
        "vite": "^5.4.11"
    }
}
